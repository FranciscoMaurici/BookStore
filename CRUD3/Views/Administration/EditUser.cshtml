@model CRUD3.Models.Account.UserViewModel
@{
    ViewData["Title"] = "EditUser";
}

<h4>Edit User</h4>
<hr />
<div class="row textGrey">
    <div class="col-md-6">
        <form asp-controller="Administration" asp-action="UpdateUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="SecurityStamp" />
            <input type="hidden" asp-for="UserName" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleList" class="control-label"></label>
                <select asp-for="Name" asp-items="Model.RoleList" multiple="multiple" class="form-control"></select>
                <span asp-validation-for="Roles" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Save" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Administration" class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Back to Administration</a>
                </div>
            </div>
        </form>
    </div>
</div>

