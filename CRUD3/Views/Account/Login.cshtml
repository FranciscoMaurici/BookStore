
@model CRUD3.Models.Account.LogInViewModel
@{
    ViewData["Title"] = "Login";
}

<h4 style="color:aqua">Log In</h4>
<div class="row h-100 justify-content-center align-items-center">
    <div class="col-md-6 textGrey">
        <form asp-controller="Account" asp-action="SignIn" asp-route-returnurl="@Model.ReturnUrl">
            @*@Html.ValidationSummary(false, "", new { @class = "text-danger" })*@

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group col-md-10">
                <label asp-for="Email" class="control-label"></label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-envelope fa-fw"></i></span>
                    </div>
                    <input asp-for="Email" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group col-md-10">
                <label asp-for="Password" class="control-label"></label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-unlock fa-fw"></i></span>
                    </div>
                    <input asp-for="Password" class="form-control" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-check col-md-10">
                <div class="form-check-inline">
                    <label asp-for="RememberMe" class="form-check-label">
                        Remember Me
                        <input asp-for="RememberMe" class="form-check-input" />
                    </label>
                    <span asp-validation-for="RememberMe" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-md-10">
                <input type="submit" value="LogIn" class="btn btn-success btn-block" />
            </div>
        </form>
    </div>
</div>