@model IEnumerable<AuthorViewModel>
@{
    ViewData["Title"] = "AuthorList";
}

<h4>Author List</h4>
<hr />


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-controller="Author" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-marker fa-lg">Edit</i></a>
                    <a asp-controller="Author" asp-action="Delete" asp-route-id="@item.Id" class="text-danger ml-1" onclick="return confirm('Are you sure to delete this record?')"><i class="fa fa-trash-alt fa-lg">Delete</i></a>
                </td>
            </tr>
        }
    </tbody>


</table>
</br>
<a asp-controller="Author" asp-action="Add"><i class="fa fa-marker fa-lg">Add New Author</i></a>

